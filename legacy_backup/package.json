{
  "name": "curriculum-spa",
  "version": "1.0.0",
  "description": "Currículum de Pedro Úbeda Sánchez como una Single-Page Application",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "deep-clean": "rimraf node_modules package-lock.json",
    "copy:html": "npx cpx2 \"*.html\" dist",
    "copy:images": "npx cpx2 \"*.{webp,jpg,svg,png,ico}\" dist",
    "copy:fonts": "npx cpx2 \"assets/fonts/**/*\" dist/assets/fonts",
    "copy:config": "npx cpx2 \"{*.xml,*.webmanifest,CNAME}\" dist",
    "copy:sw": "npx cpx2 sw.js dist",
    "copy:readme": "npx cpx2 README.md dist",
    "copy:agent": "npx cpx2 \"{agent.md,agent.yaml}\" dist",
    "copy:docs": "npx cpx2 \"{MIGRACION_TYPESCRIPT.md,TYPESCRIPT_QUICKSTART.md}\" dist",
    "build:css": "cross-env NODE_ENV=production postcss assets/css/input.css -o dist/assets/css/style.min.css",
    "build:ts": "esbuild assets/js/main.ts --bundle --minify --target=es2020 --outfile=dist/assets/js/main.min.js",
    "build:sw": "esbuild sw.ts --bundle --minify --target=es2020 --outfile=dist/sw.js",
    "build:js": "npm run build:ts && npm run build:sw",
    "build": "npm-run-all clean --parallel build:css build:js copy:html copy:images copy:fonts copy:config copy:sw copy:readme copy:agent copy:docs",
    "build:css:dev": "postcss assets/css/input.css -o dist/assets/css/style.min.css",
    "build:ts:dev": "esbuild assets/js/main.ts --bundle --sourcemap --target=es2020 --outfile=dist/assets/js/main.min.js",
    "build:sw:dev": "esbuild sw.ts --bundle --sourcemap --target=es2020 --outfile=dist/sw.js",
    "build:js:dev": "npm run build:ts:dev && npm run build:sw:dev",
    "build:dev": "npm-run-all --parallel build:css:dev build:js:dev copy:html copy:images copy:fonts copy:config copy:sw copy:readme copy:agent copy:docs",
    "serve": "browser-sync start --server dist --single --files \"dist/**\"",
    "watch:css": "postcss assets/css/input.css -o dist/assets/css/style.min.css --watch",
    "watch:js": "onchange 'assets/js/**/*.ts' 'sw.ts' -- npm run build:js:dev",
    "watch:html": "onchange \"*.html\" -- npm run copy:html",
    "watch:images": "onchange \"*.{webp,jpg,svg,png,ico}\" -- npm run copy:images",
    "watch:sw": "onchange 'sw.ts' -- npm run build:sw:dev && npm run copy:sw",
    "dev": "npm-run-all clean build:dev --parallel watch:* serve",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.11",
    "@types/node": "^24.10.0",
    "browser-sync": "^3.0.2",
    "cpx2": "^4.2.0",
    "cross-env": "^7.0.3",
    "cssnano": "^7.1.1",
    "cypress": "^13.13.1",
    "esbuild": "^0.27.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss": "^8.4.38",
    "postcss-cli": "^11.0.1",
    "rimraf": "^5.0.7",
    "tailwindcss": "^3.4.4",
    "terser": "^5.44.0",
    "typescript": "^5.9.3"
  }
}
